---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Page Not Found | Expungement Attorneys Online"
  description="The page you are looking for could not be found. Explore our directory of expungement attorneys to help clear your criminal record."
>
  <Header />
  
  <main class="min-h-[60vh] flex items-center">
    <div class="container py-16 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-800">404 - Page Not Found</h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        The page you are looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn btn-primary">
          Return to Home
        </a>
        <a href="/cities" class="btn btn-secondary">
          Find Attorneys by City
        </a>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout> 